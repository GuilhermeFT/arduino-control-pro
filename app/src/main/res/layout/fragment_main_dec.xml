<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainFragment" android:background="#FFFFFF">
    <TextView
            android:text="Status:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#000000" android:textSize="18sp" android:fontFamily="sans-serif-light"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.45"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:src="@drawable/ic_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_status"
            app:layout_constraintBottom_toBottomOf="@+id/textView" app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/progressBar_status"
            app:layout_constraintTop_toTopOf="@+id/im_status" app:layout_constraintBottom_toBottomOf="@+id/im_status"
            app:layout_constraintStart_toEndOf="@+id/im_status"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/pager"
            app:layout_constraintBottom_toTopOf="@+id/circlePageIndicator"/>
    <com.viewpagerindicator.CirclePageIndicator
            android:layout_width="0dp" android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/circlePageIndicator" app:pageColor="#AFAFAF"
            app:fillColor="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>